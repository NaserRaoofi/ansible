# Real-World Web Application Project Inventory
# New EC2 Instance Configuration

[webservers]
ansible ansible_host=ec2-100-27-28-140.compute-1.amazonaws.com

[databases] 
ansible ansible_host=ec2-100-27-28-140.compute-1.amazonaws.com

[all:vars]
# EC2 connection settings
ansible_user=ec2-user
ansible_ssh_private_key_file=~/.ssh/ansibletestkey.pem
ansible_become=yes
ansible_become_method=sudo
ansible_ssh_common_args='-o StrictHostKeyChecking=no'
